<body>

<div class="container">
    <h2>CAFE MUSLIM 10 RPL</h2>
    <h3>Program Kasir Sederhana</h3>

    <label>Nama Kasir</label>
    <input type="text" id="kasir">

    <label>Nama Pengunjung</label>
    <input type="text" id="pengunjung">

    <label>Pilih Menu</label>
    <select id="menu">
        <option value="15000">Nasi Goreng - Rp 15.000</option>
        <option value="12000">Mie Goreng - Rp 12.000</option>
        <option value="13000">Ayam Geprek - Rp 13.000</option>
        <option value="18000">Ayam Bakar - Rp 18.000</option>
        <option value="5000">Es Teh - Rp 5.000</option>
        <option value="7000">Es Jeruk - Rp 7.000</option>
        <option value="8000">Kopi Hitam - Rp 8.000</option>
        <option value="10000">Cappuccino - Rp 10.000</option>
    </select>

    <label>Jumlah Beli</label>
    <input type="number" id="jumlah" value="1">

    <label>Uang Bayar</label>
    <input type="number" id="bayar">

    <button onclick="hitung()">Proses Transaksi</button>

    <div class="nota" id="output"></div>

    <button onclick="window.print()">Cetak Struk</button>
</div>

<script>
function hitung() {
    var kasir = document.getElementById("kasir").value;
    var pengunjung = document.getElementById("pengunjung").value;
    var menu = document.getElementById("menu");
    var harga = parseInt(menu.value);
    var namaMenu = menu.options[menu.selectedIndex].text;
    var jumlah = parseInt(document.getElementById("jumlah").value);
    var bayar = parseInt(document.getElementById("bayar").value);

    var total = harga * jumlah;
    var kembalian = bayar - total;

    document.getElementById("output").innerHTML =
        "<b>STRUK PEMBAYARAN</b><br>" +
        "Cafe : Cafe Muslim 10 RPL<br>" +
        "Nama Kasir : " + kasir + "<br>" +
        "Nama Pengunjung : " + pengunjung + "<br><hr>" +
        "Menu : " + namaMenu + "<br>" +
        "Jumlah : " + jumlah + "<br>" +
        "Total : Rp " + total + "<br>" +
        "Bayar : Rp " + bayar + "<br>" +
        "Kembalian : Rp " + kembalian + "<br><hr>" +
        "Terima Kasih ðŸ˜Š";
}
</script>

</body>
